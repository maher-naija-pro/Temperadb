# TimeSeriesDB Configuration
# Copy this file to .env and modify as needed

# Server Configuration
PORT=8080
READ_TIMEOUT=30
WRITE_TIMEOUT=30
IDLE_TIMEOUT=120

# Storage Configuration
DATA_FILE=data.tsv
MAX_FILE_SIZE=1073741824
BACKUP_DIR=backups
COMPRESSION=false

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=text
LOG_OUTPUT=stdout
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=28
LOG_COMPRESS=true

# Database Configuration
MAX_CONNECTIONS=100
CONNECTION_TTL=300
QUERY_TIMEOUT=30
