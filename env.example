# TimeSeriesDB Configuration
# Copy this file to .env and modify as needed

# Server Configuration
PORT=8080
READ_TIMEOUT=30
WRITE_TIMEOUT=30
IDLE_TIMEOUT=120

# Storage Configuration
DATA_FILE=./data/data.tsv
DATA_DIR=./data
MAX_FILE_SIZE=1073741824
BACKUP_DIR=./data/backups
COMPRESSION=false

# LSM Tree Storage Configuration
MAX_MEMTABLE_SIZE=67108864
MAX_WAL_SIZE=67108864
MAX_LEVELS=7
MAX_SEGMENTS_PER_LEVEL=10
MAX_SEGMENT_SIZE=268435456
COMPACTION_INTERVAL=30
MAX_CONCURRENT_COMPACTIONS=2

# Sharding Configuration
SHARD_COUNT=1
SHARD_STRATEGY=hash
SHARD_KEY_FIELDS=measurement

# Performance Tuning
BUFFER_SIZE=65536
FLUSH_THRESHOLD=0.8
COMPACTION_THRESHOLD=0.9

# Durability Settings
WAL_ENABLED=true
WAL_FLUSH_INTERVAL=100
SYNC_ON_WRITE=false
BACKUP_INTERVAL=86400

# Monitoring and Metrics
METRICS_ENABLED=true
STATS_INTERVAL=60

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=text
LOG_OUTPUT=stdout
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=28
LOG_COMPRESS=true

# Database Configuration
MAX_CONNECTIONS=100
CONNECTION_TTL=300
QUERY_TIMEOUT=30


